// files will be ignored for compilation if prefixed with an underscore
@import "partials/critical_and_global/fonts/**/!(_*)*"
@import "partials/critical_and_global/vendor/vendor_libraries"
@import "partials/critical_and_global/variables/variables"
@import "partials/critical_and_global/animations/**/!(_*)*"
@import "partials/critical_and_global/functions/**/!(_*)*"
@import "partials/critical_and_global/base/**/!(_*)*"
@import "partials/reference/**/!(_*)*"

.global_header
    display flex
    align-items center
    justify-content center
    background-color $cl--raisin-black

    &__inner
        contain()
        display flex
        flex-direction column
        +above(4)
            flex-direction row
        align-items stretch
        gap $sp
        +above(4)
            gap $sp--double
        padding $sp
        +above(4)
            padding $sp--double 0

    &__logo
        max-width 16rem
        +above(6)
            max-width 22rem

    &__text
    &__image
        +above(4)
            flex 0 1 50%

    &__text
        display flex
        flex-direction column
        justify-content center

    &__tagline
        margin-top $sp
        +above(4)
            margin-top $sp--double

        &__label
            fz-scale--plus-one()
            font-family $ff--strong
            color $cl--deep-cerise

        &__text
            mt($sp--eighth)
            line-height 1.3
            max-width 18ch
            color white

    &__contact_and_social
        mt()
        display flex
        flex-direction row
        align-items center
        justify-content flex-start
        gap $sp

    &__contact
        flex 0 0 auto
        transition($properties: "background-color")
        padding $sp--third $sp--two-thirds
        border-radius $bdrs
        border-bottom 2px solid modify-hsla($color: $cl--deep-cerise, $l: -10)
        border-right 2px solid modify-hsla($color: $cl--deep-cerise, $l: -10)
        background-color $cl--deep-cerise
        text-shadow 0 0 4px modify-hsla($color: $cl--deep-cerise, $l: -20)
        color white

        &:active
        &:focus
        &:hover
            background-color modify-hsla($color: $cl--deep-cerise, $l: -10)

    &__social

        &__list
            flex 0 0 auto
            display flex
            flex-direction row
            align-items center
            justify-content space-between
            gap $sp

        &__item
            display flex
            border-radius 50%
            border 2px solid $cl--deep-cerise

            &:active
            &:focus
            &:hover
                border-color modify-hsla($color: $cl--deep-cerise, $l: -10)

        &__anchor
            transition($properties: "color")
            display flex
            height $sp--plus-two-thirds
            width @height
            padding $sp--quarter
            color $cl--deep-cerise

            &:active
            &:focus
            &:hover
                color modify-hsla($color: $cl--deep-cerise, $l: -10)

    &__image
        +above(4)
            display flex
            flex-direction column
        +below(3)
            width 100%
            padding-bottom 80%
        border-right 4px solid $cl--keppel
        border-bottom 4px solid $cl--keppel
        background-repeat no-repeat
        background-position center
        +above(4)
            background-position center 40%
        background-size cover

html
body
.main_content
.global_header
.global_header__inner
    +above(4)
        overflow hidden
        height 100vh
    min-height 100vh
    +above(4)
        max-height 100vh
